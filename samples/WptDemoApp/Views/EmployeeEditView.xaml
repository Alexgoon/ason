<UserControl x:Class="WpfSampleApp.Views.EmployeeEditView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:WpfSampleApp.Views"
             xmlns:m="clr-namespace:WpfSampleApp.Model"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800"
             Height="300"
             MinWidth="600">
    <Border Padding="10"
            Background="White">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="3*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <!-- Employee Basic Info -->
            <GroupBox Header="Employee Info"
                      Grid.Row="0"
                      Grid.Column="0"
                      Margin="0 0 10 0">
                <Grid Margin="8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <TextBlock Text="First Name:"
                               VerticalAlignment="Center"
                               Margin="0 0 6 4" />
                    <TextBox Grid.Column="1"
                             Text="{Binding Editable.FirstName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                             Margin="0 0 0 4" />

                    <TextBlock Grid.Row="1"
                               Text="Last Name:"
                               VerticalAlignment="Center"
                               Margin="0 0 6 4" />
                    <TextBox Grid.Row="1"
                             Grid.Column="1"
                             Text="{Binding Editable.LastName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                             Margin="0 0 0 4" />

                    <TextBlock Grid.Row="2"
                               Text="Email:"
                               VerticalAlignment="Center"
                               Margin="0 0 6 4" />
                    <TextBox Grid.Row="2"
                             Grid.Column="1"
                             Text="{Binding Editable.Email, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                             Margin="0 0 0 4" />

                    <TextBlock Grid.Row="3"
                               Text="Position:"
                               VerticalAlignment="Center"
                               Margin="0 0 6 4" />
                    <TextBox Grid.Row="3"
                             Grid.Column="1"
                             Text="{Binding Editable.Position, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                             Margin="0 0 0 4" />

                    <TextBlock Grid.Row="4"
                               Text="Hire Date:"
                               VerticalAlignment="Center"
                               Margin="0 0 6 0" />
                    <DatePicker Grid.Row="4"
                                Grid.Column="1"
                                SelectedDate="{Binding Editable.HireDate, Mode=TwoWay}"
                                SelectedDateFormat="Short" />
                </Grid>
            </GroupBox>

            <!-- Sales -->
            <GroupBox Header="Sales"
                      Grid.Row="0"
                      Grid.Column="1"
                      Grid.RowSpan="2">
                <DockPanel>
                    <ToolBarTray IsLocked="True"
                                 Background="Transparent"
                                 DockPanel.Dock="Top">
                        <ToolBar>
                            <Button Content="Add Sale"
                                    Command="{Binding AddSaleCommand}" />
                            <Button Content="Delete Sale"
                                    Command="{Binding DeleteSaleCommand}" />
                        </ToolBar>
                    </ToolBarTray>
                    <DataGrid ItemsSource="{Binding SalesCollection}"
                              AutoGenerateColumns="False"
                              CanUserAddRows="False"
                              CanUserDeleteRows="False"
                              Margin="4"
                              HeadersVisibility="Column"
                              SelectedItem="{Binding SelectedSale}">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Product"
                                                Binding="{Binding ProductName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                Width="2*" />
                            <DataGridTextColumn Header="Quantity"
                                                Binding="{Binding Quantity, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                Width="*" />
                            <DataGridTextColumn Header="Price"
                                                Binding="{Binding Price, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, StringFormat={}{0:C}}"
                                                Width="*" />
                            <DataGridTemplateColumn Header="Sale Date"
                                                    Width="*">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding SaleDate, StringFormat={}{0:d}}" />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                                <DataGridTemplateColumn.CellEditingTemplate>
                                    <DataTemplate>
                                        <DatePicker SelectedDate="{Binding SaleDate, Mode=TwoWay}"
                                                    SelectedDateFormat="Short" />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellEditingTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </DockPanel>
            </GroupBox>

            <StackPanel Grid.Row="2"
                        Grid.ColumnSpan="2"
                        Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        Margin="0 8 0 0">
                <Button Content="Save"
                        Command="{Binding SaveCommand}"
                        Background="{DynamicResource {x:Static SystemColors.AccentColorBrushKey}}"
                        Margin="0 0 8 0" />
                <Button Content="Cancel"
                        Command="{Binding CancelCommand}" />
            </StackPanel>
        </Grid>
    </Border>
</UserControl>

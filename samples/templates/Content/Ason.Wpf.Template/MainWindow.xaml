<Window x:Class="Ason.Wpf.Template.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:Ason.Wpf.Template.ViewModels"
        xmlns:v="clr-namespace:Ason.Wpf.Template.Views"
        mc:Ignorable="d"
        Title="Ason-Integrated App"
        Height="800"
        Width="1200">
    <Window.DataContext>
        <vm:MainViewModel />
    </Window.DataContext>
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        <DataTemplate DataType="{x:Type vm:CustomersViewModel}">
            <v:CustomersView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:OrdersViewModel}">
            <v:OrdersView />
        </DataTemplate>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition />
            <ColumnDefinition Width="350" />
        </Grid.ColumnDefinitions>
        <ListBox ItemsSource="{Binding NavigatoinItems}"
                 SelectedItem="{Binding CurrentNavigationItem}"
                 DisplayMemberPath="Name"/>
        <ContentControl Content="{Binding CurrentNavigationItem.ViewModel}" 
                        Grid.Column="1"
                        Margin="10,0,0,10"/>
        <Grid Margin="10,0,10,0"
              Grid.Column="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <TextBox Text="{Binding ChatResponse}"
                     TextWrapping="Wrap"
                     AcceptsReturn="True"
                     IsReadOnly="True"
                     BorderThickness="0"
                     Grid.ColumnSpan="2"
                     Margin="0,0,0,10" />
            <ProgressBar IsIndeterminate="True"
                         VerticalAlignment="Bottom"
                         Visibility="{Binding SendMessageCommand.IsRunning, Converter={StaticResource BooleanToVisibilityConverter}}"
                         Margin="0,6"
                         Grid.ColumnSpan="2" />
            <TextBox x:Name="InputTextBox"
                     Text="{Binding UserInput, UpdateSourceTrigger=PropertyChanged}"
                     TextWrapping="Wrap"
                     AcceptsReturn="True"
                     BorderThickness="1"
                     Grid.Row="2"
                     Margin="0,0,0,10"
                     MinHeight="60">
                <TextBox.InputBindings>
                    <KeyBinding Command="{Binding SendMessageCommand}"
                                Key="Enter" />
                </TextBox.InputBindings>
            </TextBox>
            <Button Command="{Binding SendMessageCommand}"
                    Content="➤"
                    IsDefault="True"
                    VerticalAlignment="Bottom"
                    Margin="8,0,0,10"
                    Padding="8,4"
                    Width="30"
                    BorderThickness="1"
                    Background="{DynamicResource {x:Static SystemColors.AccentColorBrushKey}}"
                    Grid.Row="2"
                    Grid.Column="1" />
        </Grid>
    </Grid>
</Window>
